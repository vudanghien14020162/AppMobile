<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="false"
		android:state_enabled="true">
		<shape>
			<gradient
					android:type="linear"
					android:angle="0"
					android:startColor="#FBAD1024"
					android:endColor="#FFEE4A5A" />
			<corners android:radius="@dimen/button_radius" />
		</shape>
	</item>
	<item android:state_pressed="true"
		android:state_enabled="true">
		<shape>
			<gradient
					android:type="linear"
					android:angle="0"
					android:startColor="#FFEE4A5A"
					android:endColor="#FBAD1024" />
			<corners android:radius="@dimen/button_radius" />
		</shape>
	</item>
	<item android:state_enabled="false">
		<shape>
			<gradient
					android:type="linear"
					android:angle="0"
					android:startColor="#fa2b2b2b"
					android:endColor="#ff7a7a7a" />
			<corners android:radius="@dimen/button_radius" />
		</shape>
	</item>
</selector>