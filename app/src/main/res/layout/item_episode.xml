<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutItemRoot"
        android:layout_marginTop="@dimen/common_padding"
        android:layout_marginBottom="@dimen/side_margin_common"
        android:background="@drawable/vod_item_selector">

    <com.mobitv.ott.customview.PorterShapeImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imgItemPoster"
            app:siShape="@drawable/shape_rounded_rectangle"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintDimensionRatio="1.875:1"/>
    <View
            app:layout_constraintBottom_toBottomOf="@id/imgItemPoster"
            app:layout_constraintStart_toStartOf="@id/imgItemPoster"
            app:layout_constraintEnd_toEndOf="@id/imgItemPoster"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/vAtBottomItemPoster"
            android:background="@drawable/view_black_gradient_overlay_at_bottom_radius"/>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imvItemEpisodePlay"
            android:alpha="0.8"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_details_play"
            app:layout_constraintBottom_toBottomOf="@id/imgItemPoster"
            app:layout_constraintStart_toStartOf="@id/imgItemPoster"
            app:layout_constraintEnd_toEndOf="@id/imgItemPoster"
            app:layout_constraintTop_toTopOf="@id/imgItemPoster"/>

    <com.mobitv.ott.customview.TextViewRegular
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="15sp"
            android:gravity="start"
            android:id="@+id/tvItemName"
            android:text="@string/app_name"
            android:textColor="#222222"
            android:layout_marginStart="@dimen/common_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgItemPoster"/>
    <com.mobitv.ott.customview.TextViewRegular
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="15sp"
            android:gravity="start"
            android:id="@+id/tvItemDuration"
            android:text="@string/minute"
            android:textColor="#666666"
            android:layout_marginStart="@dimen/common_padding"
            app:layout_constraintTop_toBottomOf="@id/tvItemName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgItemPoster"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDownloadEpisode"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_download_item_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/common_padding"
            app:layout_constraintStart_toEndOf="@id/imgItemPoster"
            android:contentDescription="@string/app_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>