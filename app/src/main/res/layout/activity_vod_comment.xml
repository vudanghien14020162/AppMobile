<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/containerCommentActivity"
        android:background="@color/colorBgCommon">

    <com.mobitv.ott.customview.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBackVodComment"
            android:clickable="true"
            android:focusable="true"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="@dimen/margin_top_status_bar"
            android:textColor="@color/btn_text_common_color"
            android:text="@string/back"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_back_black_selector"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"
            android:id="@+id/vWhite"
            app:layout_constraintTop_toBottomOf="@id/btnBackVodComment"
            app:layout_constraintBottom_toBottomOf="@id/cvAvatar"
            android:layout_marginTop="@dimen/side_margin_common"/>

    <com.mobitv.ott.customview.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/side_margin_common"
            android:layout_marginStart="@dimen/side_margin_common"
            android:text="@string/comment"
            android:textSize="@dimen/title_category_size"
            android:id="@+id/tvCommentTitle"
            app:layout_constraintTop_toTopOf="@id/vWhite"
            app:layout_constraintStart_toStartOf="@id/vWhite"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/rvListComments"
            android:background="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/layoutComment"
            app:layout_constraintTop_toBottomOf="@id/vWhite"/>

    <com.mobitv.ott.customview.TextViewBold
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tvNoComment"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/layoutComment"
            app:layout_constraintTop_toBottomOf="@id/vWhite"
            android:textColor="#434343"/>

    <androidx.cardview.widget.CardView
            android:layout_width="@dimen/vod_avatar_comment_width"
            android:layout_height="0dp"
            android:id="@+id/cvAvatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="2:3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/side_margin_common"
            android:layout_marginTop="@dimen/margin_top_status_bar"
            card_view:cardElevation="10dp"
            app:cardCornerRadius="@dimen/common_border_radius">

        <com.mobitv.ott.customview.PorterShapeImageView
                app:siShape="@drawable/shape_rounded_rectangle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@android:color/black"
                android:id="@+id/imvVodAvatar"/>
    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutComment"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent">
        <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/colorBgCommon"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/vSeparate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <com.mobitv.ott.customview.EditTextRegular
                android:enabled="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vSeparate"
                app:layout_constraintEnd_toStartOf="@id/btnSendComment"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/edtComment"
                android:textColor="#999999"
                android:padding="@dimen/common_padding"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:layout_marginTop="@dimen/side_margin_common"
                android:layout_marginStart="@dimen/side_margin_common"
                android:layout_marginBottom="@dimen/side_margin_common"
                android:hint="@string/comment_hint"/>

        <com.mobitv.ott.customview.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/btnSendComment"
                android:layout_marginEnd="@dimen/side_margin_common"
                android:clickable="true"
                android:focusable="true"
                android:enabled="false"
                android:text="@string/send"
                android:padding="@dimen/common_padding"
                android:textColor="@color/text_color_btn_comment"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>