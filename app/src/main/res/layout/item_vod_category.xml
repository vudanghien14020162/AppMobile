<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutItemRoot"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/layoutItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_margin_common"
            android:layout_marginEnd="@dimen/side_margin_common"
            android:layout_marginTop="@dimen/common_padding">
        <com.mobitv.ott.customview.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/title_category_size"
                android:id="@+id/tvItemName"
                android:textColor="#212121"
               android:layout_alignParentStart="true"/>
        <com.mobitv.ott.customview.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="15sp"
                android:id="@+id/tvItemMore"
                android:text="@string/all"
                android:textColor="#979797"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/common_padding"
                tools:ignore="RelativeOverlap"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:splitMotionEvents="false"
            android:id="@+id/rvItemVod"
            android:layout_marginTop="@dimen/common_padding"
            android:layout_marginBottom="@dimen/common_padding"/>

</LinearLayout>